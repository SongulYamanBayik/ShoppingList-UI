@model List<Shoppinglist_EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Ürünler</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item" placeHolder="Ürün Ekle">
                            <a href="/Product/AddProduct/" class="nav-link">
                                <i class="fas fa-plus"></i>
                            </a>
                        </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

        <!-- Default box -->
        <div class="card card-solid">
            <div class="card-body pb-0">
                <div class="row d-flex align-items-stretch">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                            <div class="card bg-light">
                                <div class="card-header text-muted border-bottom-0">
                                    <div>
                                        @item.Category.Name

                                    </div>
                                </div>

                                <div class="card-body pt-0">
                                    <div class="row">
                                        <div class="col-12">
                                            <h2 class="lead"><b>@item.Name</b></h2>
                                            <img src="@item.ImageUrl" alt="" class="img-circle img-fluid" style="height="250px"; width="250px";">

                                        </div>

                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="text-right">
                                        @if (!item.Status)
                                        {
                                            <a href="/Product/ActivateProduct/@item.ID" class="btn btn-sm btn-success">
                                                Aktif et
                                            </a>
                                        }else
                                        {
                                            <a href="/Product/DeleteProduct/@item.ID" class="btn btn-sm btn-danger">
                                              Pasif et
                                            </a>  
                                        }
                                        <a href="/Product/EditProduct/@item.ID" class="btn btn-sm btn-primary">
                                            Güncelle
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!-- /.card-body -->
