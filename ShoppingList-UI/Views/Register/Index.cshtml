@model DTO.DTOs.UserDTOs.UserSignUpDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Registration Page</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/template/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/template/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/template/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        @* <div class="register-logo">
        <a href="../../index2.html"><b>Admin</b>LTE</a>
        </div>*@

        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg">Kayıt Ol</p>

                <form action="/Register/Index/" method="post">
                    <div class="input-group mb-3">
                        <input type="text" id="UserName" asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı">
                        @*<span asp-validation-for="UserName" class="text-danger"></span>*@
                        
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" id="Name" asp-for="Name" class="form-control" placeholder="Adı">
                        @*<span asp-validation-for="Name" class="text-danger"></span>*@
                        
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" id="Surname" asp-for="Surname" class="form-control" placeholder="Soyadı">
                        @*<span asp-validation-for="Surname" class="text-danger"></span>*@

                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="email" asp-for="Mail" id="Mail" class="form-control" placeholder="Mail">
                        @*<span asp-validation-for="Mail" class="text-danger"></span>*@

                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" asp-for="Password" id="Password" class="form-control" placeholder="Şifre">
                        @*<span asp-validation-for="Password" class="text-danger"></span>*@

                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input type="text" asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control" placeholder="Şifre Tekrar">
                        @*<span asp-validation-for="ConfirmPassword" class="text-danger"></span>*@

                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                       <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Kayıt Ol</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                

                <a href="login.html" class="text-center">Üyeliğim var</a>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery -->
    <script src="~/template/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/template/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/template/dist/js/adminlte.min.js"></script>
</body>
</html>

