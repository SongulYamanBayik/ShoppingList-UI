@model DTO.DTOs.ProductToDoListDTOs.ProductToDoListDto
@{
    ViewData["Title"] = "Liste Detay";
    Layout = "~/Views/Shared/_LayoutUserPage.cshtml";
}
<section class="content" style="min-height: 680px;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-2">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                       @foreach (var todolist in Model.toDoLists)
                        {
                            <h3 class="profile-username text-center">@todolist.Name</h3>

                        }
                        <ul class="list-group list-group-unbordered mb-3">
                            @foreach (var item in Model.selectedListItems)
                            {
                                <li class="list-group-item">
                                    <b>@item.product.Name</b> <a class="float-right">@item.Description</a>
                                </li>
                            }
                           
                        </ul>

                    </div>
                    <!-- /.card-body -->
                </div>
                
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="activity">
                               
                                @*<ul class="list-group list-group-unbordered mb-3">
                                    @foreach (var product in Model.products)
                                    {
                                        <li class="list-group-item">
                                            <b>@product.Name</b> <a href="#" class="float-right btn-tool"><i class="fas fa-plus"></i></a>
                                        </li>
                                    }

                                </ul>*@
                                <div class="row d-flex align-items-stretch">
                                    @foreach (var product in Model.products)
                                    {
                                        <div class="col-12 col-sm-6 col-md-2 d-flex align-items-stretch">
                                            <div class="card bg-light">
                                                <div class="card-header text-muted border-bottom-0">
                                                    <div>
                                                        @product.Category.Name

                                                    </div>
                                                </div>

                                                <div class="card-body pt-0">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            <h2 class="lead"><b>@product.Name</b></h2>

                                                            <img src="@product.ImageUrl" alt="" class="img-circle img-fluid" style="height=" 250px";width="250px" ;">

                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="card-footer">

                                                    <div class="row">
                                                       
                                                        <a href="@*/Product/EditProduct/@item.ID*@" class="btn btn-sm btn-primary m-1">
                                                            Ekle
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>

                               
                            </div>

                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
            <div class="col-md-1"></div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

